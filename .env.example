# Environment
export ENV=development

# Database (PostgreSQL)
export POSTGRES_USER=navplane
export POSTGRES_PASSWORD=navplane_dev
export POSTGRES_DB=navplane
export DATABASE_URL="postgres://navplane:navplane_dev@localhost:5432/navplane?sslmode=disable"

# Auth0 Configuration
export AUTH0_DOMAIN="your-tenant.auth0.com"
export AUTH0_AUDIENCE="https://api.navplane.io"

# Encryption Key (32 bytes, base64 encoded)
# Generate with: openssl rand -base64 32
export ENCRYPTION_KEY="base64-encoded-32-byte-key-here"

# Optional: New encryption key for rotation
# export ENCRYPTION_KEY_NEW="new-base64-encoded-32-byte-key"

# Optional: Server configuration
# export PORT=8080
# export DB_MAX_OPEN_CONNS=25
# export DB_MAX_IDLE_CONNS=5
